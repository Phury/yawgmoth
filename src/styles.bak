.dot {
    height: 12px;
    width: 12px;
    background-color: #bbb;
    border-radius: 50%;
    display: inline-block;
    margin-right: 2px;
}

.dot.w { background-color: #F8BA00; }
.dot.u { background-color: #489FF8; }
.dot.b { background-color: #7D8080; }
.dot.r { background-color: #EA4025; }
.dot.g { background-color: #61D836; }


.layout {
  margin: 1em;
}

.deck-card {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

/* Small devices (tablets, 768px and up) */
@media (max-width: 768px) {

  .deck-card img {
    width: 100%;
  }
}


/* Medium devices (desktops, 992px and up) */
@media (min-width: 768px) {

  section.preview {
    width: 25vw;
  }
}

/* Large devices (desktops, 992px and up) */
@media (min-width: 992px) {

  section.card.list {
    -webkit-column-count: 2;
       -moz-column-count: 2;
            column-count: 2;
  }

}
